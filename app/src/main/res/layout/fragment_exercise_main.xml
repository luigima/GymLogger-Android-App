<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.exercise.ExerciseMainFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/colorPrimary"
        android:elevation="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/muscles"
            android:id="@+id/textView2"
            android:textColor="#FFF"
            android:layout_marginStart="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:contentDescription="@string/arrow_to_the_right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{Category}"
            android:id="@+id/textViewCategory"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView"
            android:textColor="#FFF" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textViewCategory"
            android:layout_alignBottom="@+id/textViewCategory"
            android:contentDescription="@string/arrow_to_the_right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{Exercise}"
            android:id="@+id/textViewExercise"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView2"
            android:textColor="#FFF" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/container_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?attr/selectableItemBackground" />

</LinearLayout>
