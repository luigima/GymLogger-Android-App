<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            android:layout_toStartOf="@+id/imageView_muscles"
            android:text="{workout_title}"
            android:textColor="@color/colorPrimaryDarkText"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView_muscles"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="@string/drag_and_drop_indicator" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView_title"
            android:layout_below="@+id/textView_title"
            android:layout_toStartOf="@+id/imageView_muscles"
            android:text="Irgendeine Beschreibung wie toll dieses Workout doch ist. Bla bla bla"
            android:textColor="@color/colorSecondaryDarkText"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

    </RelativeLayout>

</LinearLayout>